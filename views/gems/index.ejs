<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My gem collection</title>
  </head>
  <body>
    <section class="top-bar">
      <%- include('../partials/_navbar.ejs') %>
  </section>
  <section class="greetings">
    <h1>Welcome to my gem collection</h1>
  </section>
  <section class="info-action">
    <h2>Username: <%= user.username %></h2>
    <a href="/users/<%=user._id%>/gems/new">Add a Gem</a>
  </section>
  <section class="crystals">
    <div class="gems">
      <% gems.forEach((gem) => { %>
        <div class="gem-item">
          <% if (gem.image) { %>
            <img src="/<%= gem.image %>" alt="<%= gem.name %>">
          <% } %>
          <div class="gem-info">
            <h2><a href="/users/<%= user._id %>/gems/<%= gem._id %>"><%= gem.name %></a></h2>
            <ul>
              <li><strong>Main Characteristic:</strong> <%= gem.characteristic %></li>
              <li><strong>Description:</strong> <%= gem.description %></li>
              <li><strong>Pieces available:</strong> <%= gem.pieces %></li>
            </ul>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  </body>
</html>
