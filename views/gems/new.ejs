<!-- views/gems/new.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add a New App</title>
</head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add a New Gem</h1>
    <form action="/users/<%= user._id %>/gems" method="POST">
        <label for="name">Gem Name:</label>
        <input type="text" name="name" id="name" required>
        <br>
        <label for="characteristic">Characteristic:</label>
        <input type="text" name="characteristic" id="characteristic" required>
        <br>
        <label for="description">Description</label>
        <textarea name="description" id="description"></textarea>
        <br>
        <label for="pieces">Number of pieces:</label>
        <input type="number" name="pieces" id="pieces" required>
         <br>
        <label for="image">Add image:</label>
        <input type="image" name="image" id="image">
        <br>
        <br>
        <button type="submit">Add Application</button>
        <br>
    </form>
    <br>
    <button><a href="/">Back to collection</a></button>
      </form>
  </body>
</html>
